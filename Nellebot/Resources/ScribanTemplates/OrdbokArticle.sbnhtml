<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title></title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet"> 

    <style>
        body {
            background-color: #36393f;
            color: #dcddde;
            font-family: 'Open Sans', sans-serif;
            font-size: 1.1em;
        }

        ul, ol {
            list-style-type: none;
            padding: 0;
        }

        .title {
            font-size: 1.25em;
        }

        .article-list > li {
            margin-bottom: 1em;
        }
        
        .inline-list  {
            display: inline-block;
        }

        .inline-list-items > li  {
            display: inline-block;
        }

        .definition-list {
            list-style-type: decimal;
            padding-left: 2em;
            margin-bottom: 1em;
        }

        .inner-definition-list {
            list-style-type: circle;
            padding-left: 1em;
            margin-top: 0.5em;
            margin-bottom: 0.5em;
        }

        .sub-articles {
            margin-bottom: 0.5em;
        }

    </style>
</head>
<body>
    <h1 class="title">{{dictionary == "bob" ? "Bokmålsordboka" : "Nynorskordboka"}}</h1>

    <ul class="article-list">
    {{~for article in articles~}}
    <li>
        <ul class="inline-list inline-list-items">
        {{~for lemma in article.lemmas~}}
            <li>    
                <span>{{lemma.hg_no != "" ? lemma.hg_no + " " : ""}}<b>{{lemma.value}}</b></span>
                <ul class="inline-list inline-list-items">
                {{~for paradigm in lemma.unique_paradigm_values~}}
                    <li>
                        <span>&nbsp;{{paradigm}}{{if !for.last; ","; end}}</span>
                    </li>
                {{~end~}}
                </ul>
                {{~if !for.last; ";&nbsp;el.&nbsp;"; end~}}
            </li>
        {{~end~}}
        </ul>
        {{~if article.etymologies.size > 0~}}
        <span>(</span>
        <ul class="inline-list inline-list-items">
            {{~for etymology in article.etymologies~}}
            <li>            
                {{etymology.content}}{{if !for.last; ",&nbsp;"; end}}            
            </li>
            {{~end~}}
        </ul>
        <span>)</span>
        {{~end~}}
        <ol class="definition-list">
            {{~for definition in article.definitions~}}
            <li>
                <ul class="inline-list-items">
                {{~for explanation in definition.explanations~}}
                <li>
                    <span>{{explanation}}{{if !for.last; ";&nbsp;"; end}}</span>
                </li>
                {{~end~}}
                </ul> 

                <ul class="inline-list-items">
                {{~for example in definition.examples~}}
                <li>
                    <i>{{example}}{{if !for.last; "&nbsp;|&nbsp;"; end}}</i>
                </li>
                {{~end~}}
                </ul>

                <ol class="inner-definition-list">
                {{~for innerDefinition in definition.inner_definitions~}}
                    <li>
                        <ul class="inline-list-items">
                        {{~for innerExplanation in innerDefinition.explanations~}}
                        <li>
                            <span>{{innerExplanation}}{{if !for.last; ";&nbsp"; end}}</span>
                        </li>
                        {{~end~}}
                        </ul> 

                        <ul class="inline-list-items">
                        {{~for innerExample in innerDefinition.examples~}}
                        <li>
                            <i>{{innerExample}}{{if !for.last; "&nbsp;|&nbsp;"; end}}</i>
                        </li>
                        {{~end~}}
                        </ul>
                    </li>
                {{~end~}}
                </ol>

                <ul class="sub-articles">
                    {{~for subArticle in definition.sub_articles~}}
                    <li>
                        <ul class="inline-list inline-list-items">
                            {{~for subArticleLemma in subArticle.lemmas~}}
                                <li>
                                    <b>{{subArticleLemma.value}}&nbsp;</b>
                                </li>
                            {{~end~}}
                        </ul>

                        <ul class="inline-list inline-lit-items">
                            {{~for subArticleExplanation in subArticle.explanations~}}
                                <li>
                                    <span>{{subArticleExplanation}}&nbsp;</span>
                                </li>
                            {{~end~}}
                        </ul>
                    </li>
                    {{~end~}}
                </ul>
            </li>
            {{~end~}}
        </ol>
    </li>
    {{~end~}}
    </ul>
</body>
</html>
